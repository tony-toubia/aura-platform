# Database
DATABASE_URL=postgresql://username:password@localhost:5432/aura_platform
DIRECT_DATABASE_URL=postgresql://username:password@localhost:5432/aura_platform

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key
NEWS_API_KEY=your-news-api-key

# OAuth Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret

# Proactive Notifications Configuration
# Secret for authenticating cron job requests
CRON_SECRET=your-secure-cron-secret

# Rule evaluation settings
RULE_EVALUATION_BATCH_SIZE=50
RULE_EVALUATION_TIMEOUT=30000
RULE_EVALUATION_MAX_RETRIES=3

# Sensor data caching (seconds)
SENSOR_DATA_CACHE_TTL=600

# Notification delivery settings
NOTIFICATION_QUEUE_BATCH_SIZE=100
NOTIFICATION_RETRY_DELAY=300000

# SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890

# Web Push (VAPID keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret